{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "strict": true,
    "allowJs": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": ["vite/client",  "vitest/globals", "jest"],
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/react/*"],
      "@electron/*": ["src/electron/*"],
      "@shared/*": ["src/react/shared/*"],
      "@styles/*": ["src/react/styles/*"],
      "@FroggieTypes/*": ["types/*"],
      "react": ["node_modules/preact/compat/"],
      "react-dom": ["node_modules/preact/compat/"]
    }
  },
  "include": [
    "./types/**/*.d.ts", "./public/**/*", "./src/**/*", "./types.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
}